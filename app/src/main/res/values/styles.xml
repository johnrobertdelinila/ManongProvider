<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Theme.Manong" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">@font/rubik</item>

        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:colorControlActivated" tools:targetApi="lollipop">@color/colorControlActivated</item>
        <item name="android:titleTextAppearance" tools:targetApi="lollipop">@style/TextAppearance.Manong.Toolbar</item>
        <item name="colorControlNormal">?android:attr/colorAccent</item>
        <item name="android:alertDialogTheme">@style/buttonAlertDialog</item>
    </style>

    <style name="buttonAlertDialog" parent="Widget.AppCompat.ButtonBar.AlertDialog">
        <item name="android:buttonBarPositiveButtonStyle" tools:targetApi="lollipop">@style/Widget.Manong.Button.TextButton</item>
        <item name="android:buttonBarNegativeButtonStyle" tools:targetApi="lollipop">@style/Widget.Manong.Button.AlertDialog</item>
    </style>

    <style name="Widget.Manong.Button.AlertDialog" parent="Widget.MaterialComponents.Button">

        <item name="android:textColor">@android:color/white</item>
        <item name="backgroundTint">?android:attr/textColorPrimary</item>

        <item name="android:fontFamily" tools:targetApi="jelly_bean">@font/rubik_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">true</item>

        <item name="android:stateListAnimator" tools:targetApi="lollipop">@animator/manong_next_button_state_list_anim</item>
    </style>

    <style name="Widget.Manong.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">?attr/colorAccent</item>
        <item name="android:theme">@style/Theme.Manong</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="titleTextAppearance">@style/TextAppearance.Manong.Toolbar</item>
    </style>

    <style name="Widget.Manong.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextAppearance">@style/TextAppearance.Manong.TextInputLayout.HintText</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textColorHint">?attr/colorPrimary</item>
    </style>


    <style name="TextAppearance.Manong.TextInputLayout.HintText" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:fontFamily" tools:targetApi="jelly_bean">@font/rubik_medium</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="Widget.Manong.Button" parent="Widget.MaterialComponents.Button">

        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="backgroundTint">?android:attr/colorControlActivated</item>

        <item name="android:fontFamily" tools:targetApi="jelly_bean">@font/rubik_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="Widget.Manong.Button.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">@font/rubik_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="TextAppearance.Manong.Toolbar" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.Manong.Title" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:fontFamily" tools:targetApi="jelly_bean">@font/rubik</item>
        <item name="android:textSize">34sp</item>
        <item name="textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="Widget.Manong.Backdrop" parent="">
        <item name="android:background">?attr/colorAccent</item>
    </style>

    <style name="Widget.Manong.TextView.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:fontFamily" tools:targetApi="jelly_bean">@font/rubik</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="Widget.Manong.Button.TextButton.Bold" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">@font/rubik_medium</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowBackground">@color/background_light</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />

    <style name="TextAppearance.Title.Fragment" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:fontFamily">@font/rubik_medium</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Widget.Manong.Button.Send" parent="Widget.MaterialComponents.Button">

        <item name="android:textColor">@android:color/white</item>
        <item name="backgroundTint">?android:attr/colorControlActivated</item>

        <item name="android:fontFamily" tools:targetApi="jelly_bean">@font/rubik_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">true</item>

        <item name="android:stateListAnimator" tools:targetApi="lollipop">@animator/manong_next_button_state_list_anim</item>
    </style>

    <style name="SettingsTextAppearance" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/rubik</item>
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <style name="Widget.Manong.Toolbar.Ordinary" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@color/loginPageBackgroundColor</item>
        <item name="android:theme">@style/Theme.Manong</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <!--<item name="titleTextAppearance">@style/TextAppearance.Manong.Toolbar</item>-->
    </style>

    <style name="Widget.Manong.TextInputLayout.Register" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">
        <item name="hintTextAppearance">@style/TextAppearance.Manong.TextInputLayout.HintText</item>
        <item name="android:textColorHint">?attr/colorPrimary</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="Widget.Manong.TextInputLayout.Message" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextAppearance">@style/TextAppearance.Manong.TextInputLayout.HintText</item>
        <item name="android:textColorHint">?attr/colorPrimary</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="ManongDialogTheme" parent="Theme.MaterialComponents.Light.Dialog.Alert" />

</resources>
